@model SP2026_Assignment3_amcdavid.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h1>Are you sure you want to delete this actor?</h1>

<div class="card" style="max-width:400px;">
    <img src="@Model.PhotoUrl" class="card-img-top" alt="@Model.Name" style="height:200px;object-fit:cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p><strong>Gender:</strong> @Model.Gender</p>
        <p><strong>Age:</strong> @Model.Age</p>
        <p><a href="@Model.ImdbUrl" target="_blank">View on IMDB</a></p>
    </div>
</div>

<br />
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Yes, Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>