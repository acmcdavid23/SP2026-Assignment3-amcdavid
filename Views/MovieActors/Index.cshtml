@model IEnumerable<SP2026_Assignment3_amcdavid.Models.MovieActor>

@{
    ViewData["Title"] = "Movie Actors";
}

<h1>Movie & Actor Links</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Link Actor to Movie</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Actor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Movie.Title</td>
                <td>@item.Actor.Name</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="movieId" value="@item.MovieId" />
                        <input type="hidden" name="actorId" value="@item.ActorId" />
                        <input type="submit" value="Remove" class="btn btn-sm btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>