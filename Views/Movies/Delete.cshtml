@model SP2026_Assignment3_amcdavid.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Are you sure you want to delete this movie?</h1>

<div class="card" style="max-width:400px;">
    <img src="@Model.PosterUrl" class="card-img-top" alt="@Model.Title" style="height:200px;object-fit:cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Year:</strong> @Model.Year</p>
        <p><a href="@Model.ImdbUrl" target="_blank">View on IMDB</a></p>
    </div>
</div>

<br />
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Yes, Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>